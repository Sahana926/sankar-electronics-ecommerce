# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Connection (REQUIRED)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
# For local: mongodb://localhost:27017/sankar_electrical
MONGODB_URI=mongodb://localhost:27017/sankar_electrical

# JWT Configuration (REQUIRED)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Frontend URL (REQUIRED)
# For development: http://localhost:5174
# For production: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:5174

# Razorpay Payment Gateway (REQUIRED for payments)
# Get keys from: https://dashboard.razorpay.com/app/website-app-settings/api-keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Email Configuration (Optional - for nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=your_email@example.com
